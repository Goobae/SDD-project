<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.carthage.johnson.grant.aerophile.NewProjectActivity"
    android:orientation="vertical"
    android:id="@+id/vertLayout"
    android:background="#ece4bf">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/projectNameTextView"
        android:singleLine="true"
        android:gravity="center"
        android:hint="Enter in a project name" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/horizLayout">

        <EditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:id="@+id/projectPathText"
            android:hint="Enter a filepath"
            android:layout_gravity="left"
            android:singleLine="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:id="@+id/browseButton"
            android:layout_gravity="right"
            android:onClick="Browse"
            android:textColor="#425f44"
            android:backgroundTint="#c6bc94" />
    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Create Project"
        android:id="@+id/createProjButon"
        android:onClick="CreateProject"
        android:textColor="#425f44"
        android:backgroundTint="#c6bc94" />

</LinearLayout>
